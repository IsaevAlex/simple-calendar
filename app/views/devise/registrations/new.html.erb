<div class="center">
  <h1>Календарь</h1>
  <h5>Создавайте свои события</h5>
  <div class="text-element">
    <div class="form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="sign-up-back panel-shadow">
                <h3>Регистрация</h3>
                <div class="form-group">
                  
                  <%= f.email_field :email, autofocus: true, placeholder: "Эл.адрес", class:"form-control"%>
                </div>

              <div class="form-group">
                  
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль",  class:"form-control" %>
              </div>

              <div class="form-group">
                  
                  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Подтвердите пароль" , class:"form-control" %>
              </div>

              <div class="form-group">
                  <%= f.submit "Регистрация", class:"btn btn-primary "%>
              </div>
            </div>  
        <% end %>
      </div>     
    <div>
</div>
