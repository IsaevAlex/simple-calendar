
<%= form_for([@meeting.user, @meeting]) do |f| %>
  <% if meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
      <% meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <h5>Заголовок:</h5>
      <%= f.text_field :name, class:"form-control" %>
  </div>

   <div class="form-group">
      <h5>Подробное описание:</h5>
      <%= f.text_field :description, class:"form-control" %>
  </div>

  <div class="form-group">
      <h5>Начало события:</h5>
      <%= f.datetime_select :start_time, class:"form-control" %>
  </div>

  <div class="form-group">
      <h5>Конец события:</h5>
      <%= f.datetime_select :end_time, class:"form-control" %>
  </div>
  <div class="form-group">
      <h5>Приоритет события</h5>
      <%= f.collection_select :priority_id, Priority.order(:name), :id, :name, {prompt: "Выберите приоритет"} , {class: "form-control"}  %>
  </div>
     

  <div class="modal-buttons">
    <%= f.submit "Добавить", class: "button" %>
    <%= link_to "Отмена", :back , class: "button" %>  
  </div>
<% end %>
